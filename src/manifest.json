{
    "manifest_version": 2,
    "name": "NoCoding",
    "description": "Replaces the word 'coding' with 'programming'.",
    "browser_action": {
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "48": "images/48.png",
            "128": "images/128.png"
        },
        "default_popup": "index.html"
    },
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "version": "1.0.0",
    "content_scripts": 
    [
        {
            "matches": ["*://*/*"],
            "js": ["nocode.js"],
            "run_at": "document_end"
        }
    ]
}
